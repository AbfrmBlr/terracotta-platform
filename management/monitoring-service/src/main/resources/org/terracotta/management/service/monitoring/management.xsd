<xs:schema
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    version="1.0" targetNamespace="http://www.terracotta.org/config/management" elementFormDefault="qualified">
    <xs:element name="monitor">
        <xs:complexType>
            <xs:sequence minOccurs="0" maxOccurs="1">
            </xs:sequence>
            <xs:attribute name="debug" type="xs:boolean" default="false" use="optional"/>
            <xs:attribute name="maximumUnreadMutationsPerConsumer" type="xs:integer" default="1000000" use="optional"/>
        </xs:complexType>
    </xs:element>
</xs:schema>
